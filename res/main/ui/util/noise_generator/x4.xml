<plugin resizable="true">
	<vbox spacing="4">
	
		<hbox spacing="4">
			<group text="labels.noise_generator.channel_selector">
				<grid rows="1" cols="4" bg.color="bg_schema">
					<button id="ng_cs" value="1" ui:inject="Button_red" bg.color="channel_group_red_bg"/>
					<button id="ng_cs" value="2" ui:inject="Button_green" bg.color="channel_group_green_bg"/>
					<button id="ng_cs" value="3" ui:inject="Button_orange" bg.color="channel_group_orange_bg"/>
					<button id="ng_cs" value="4" ui:inject="Button_blue" bg.color="channel_group_blue_bg"/>
				</grid>
			</group>
		</hbox>
	
		<hbox spacing="4">
	
			<group text="labels.noise_generator.global">
			
				<vbox spacing="4">
		
					<group text="labels.noise_generator.general" ipdadding="0" fill="true">
						<grid rows="2" cols="5" bg.color="bg_schema">
							<label text="labels.noise_generator.N_type"/>
							<label text="labels.noise_generator.N_mode"/>
							<label text="labels.noise_generator.N_amplitude"/>
							<label text="labels.noise_generator.N_offset"/>
							<label text="labels.noise_generator.M_inaudible"/>
							
							<combo id="nst" />
							<combo id="nsm" />
							<knob id="nsa" />
							<knob id="nso" />
							<button id="inas" />
						</grid>
					</group>
					
					<group text="labels.noise_generator.N_specs" ipdadding="0" fill="true">
						<vbox>
						
							<grid rows="2" cols="1" bg.color="bg_schema" visibility=":nst ieq 1">
								<label text="labels.noise_generator.distribution" />
								<combo id="lcgd" />
							</grid>
							
							<grid rows="2" cols="5" bg.color="bg_schema" visibility=":nst ieq 2">
								<label text="labels.noise_generator.V_type"/>
								<label text="labels.noise_generator.V_window"/>
								<label text="labels.noise_generator.V_delta" visibility=":velt ieq 2"/>
								<label text="labels.noise_generator.V_crush"/>
								<label text="labels.noise_generator.V_crush_prob"/>
								
								<combo id="velt" />
								<knob id="velw" />
								<knob id="veld" visibility=":velt ieq 2"/>
								<button id="velcs" />
								<knob id="velc" />
							</grid>
						
						</vbox>
					</group>
					
					<group text="labels.noise_generator.color" ipdadding="0" fill="true">
						<grid rows="2" cols="4" bg.color="bg_schema">
							<label text="labels.noise_generator.color"/>
							<label text="labels.noise_generator.slope_npn" visibility=":cols ieq 5"/>
							<label text="labels.noise_generator.slope_dbo" visibility=":cols ieq 6"/>
							<label text="labels.noise_generator.slope_dbd" visibility=":cols ieq 7"/>
							
							<combo id="cols" />
							<knob id="csnpn" visibility=":cols ieq 5"/>
							<knob id="csdbo" visibility=":cols ieq 6"/>
							<knob id="csdbd" visibility=":cols ieq 7"/>
						</grid>
					</group>
					
				</vbox>
			
			</group>
			
			<ui:for id="i" first="1" last="4">
				<ui:set id="bgcol" value="${ (:i ieq 1) ? 'channel_group_red_bg' : (:i ieq 2) ? 'channel_group_green_bg' : (:i ieq 3) ? 'channel_group_orange_bg' : 'channel_group_blue_bg' }"/>
				<ui:set id="col" value="${ (:i ieq 1) ? 'red' : (:i ieq 2) ? 'green' : (:i ieq 3) ? 'orange' : 'blue' }"/>
		
				<group text="labels.noise_generator.channel ${i}" visibility=":ng_cs ieq ${i}">
				
					<vbox spacing="4">
					
						<group text="labels.noise_generator.channel_controls" ipdadding="0" fill="true">
							<grid rows="2" cols="3" bg.color="${bgcol}">
								<label text="labels.noise_generator.use_global"/>
								<label text="labels.noise_generator.solo"/>
								<label text="labels.noise_generator.mute"/>
								
								<button id="glsw_${i}" />
								<button id="chsl_${i}" />
								<button id="chmt_${i}" />
							</grid>
						</group>
			
						<group text="labels.noise_generator.general" ipdadding="0" fill="true">
							<grid rows="2" cols="5" bg.color="${bgcol}">
								<label text="labels.noise_generator.N_type"/>
								<label text="labels.noise_generator.N_mode"/>
								<label text="labels.noise_generator.N_amplitude"/>
								<label text="labels.noise_generator.N_offset"/>
								<label text="labels.noise_generator.M_inaudible"/>
								
								<combo id="nst_${i}" />
								<combo id="nsm_${i}" />
								<knob id="nsa_${i}" />
								<knob id="nso_${i}" />
								<button id="inas_${i}" />
							</grid>
						</group>
						
						<group text="labels.noise_generator.N_specs" ipdadding="0" fill="true">
							<vbox>
							
								<grid rows="2" cols="1" bg.color="${bgcol}" visibility=":nst_${i} ieq 1">
									<label text="labels.noise_generator.distribution" />
									<combo id="lcgd_${i}" />
								</grid>
								
								<grid rows="2" cols="5" bg.color="${bgcol}" visibility=":nst_${i} ieq 2">
									<label text="labels.noise_generator.V_type"/>
									<label text="labels.noise_generator.V_window"/>
									<label text="labels.noise_generator.V_delta" visibility=":velt_${i} ieq 2"/>
									<label text="labels.noise_generator.V_crush"/>
									<label text="labels.noise_generator.V_crush_prob"/>
									
									<combo id="velt_${i}" />
									<knob id="velw_${i}" />
									<knob id="veld_${i}" visibility=":velt_${i} ieq 2"/>
									<button id="velcs_${i}" />
									<knob id="velc_${i}" />
								</grid>
							
							</vbox>
						</group>
						
						<group text="labels.noise_generator.color" ipdadding="0" fill="true">
							<grid rows="2" cols="4" bg.color="${bgcol}">
								<label text="labels.noise_generator.color"/>
								<label text="labels.noise_generator.slope_npn" visibility=":cols_${i} ieq 5"/>
								<label text="labels.noise_generator.slope_dbo" visibility=":cols_${i} ieq 6"/>
								<label text="labels.noise_generator.slope_dbd" visibility=":cols_${i} ieq 7"/>
								
								<combo id="cols_${i}" />
								<knob id="csnpn_${i}" visibility=":cols_${i} ieq 5"/>
								<knob id="csdbo_${i}" visibility=":cols_${i} ieq 6"/>
								<knob id="csdbd_${i}" visibility=":cols_${i} ieq 7"/>
							</grid>
						</group>
						
					</vbox>
				
				</group>
			
			</ui:for>
		</hbox>
	</vbox>
</plugin>