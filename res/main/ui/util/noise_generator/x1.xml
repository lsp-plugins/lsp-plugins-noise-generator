<plugin resizable="true">
	<vbox spacing="4">
	
		<group ipadding="0" expand="true" fill="true" text="labels.graphs.spectrum">
			<graph width.min="320" height.min="200" expand="true">
				<origin hpos="-1" vpos="-1" visible="false"/>

				<!-- Gray grid -->
				<ui:with ox="0" oy="1">
					<ui:for id="f" first="20" last="90" step="10">
						<marker v="${f}" color="graph_alt_1"/>
						<marker v="${:f*10}" color="graph_alt_1"/>
						<marker v="${:f*100}" color="graph_alt_1"/>
					</ui:for>
					<marker value="20000" color="graph_alt_1"/>
				</ui:with>
				<ui:for id="g" first="-36" last="36" step="24">
					<marker v="${g} db" ox="1" oy="0" color="graph_alt_1"/>
				</ui:for>

				<!-- Yellow grid -->
				<ui:with ox="0" oy="1" color="graph_sec">
					<marker v="100"/>
					<marker v="1000"/>
					<marker v="10000"/>
				</ui:with>
				<ui:with ox="1" oy="0" color="graph_sec">
					<marker v="+24 db"/>
					<marker v="0 db"/>
					<marker v="-24 db"/>
				</ui:with>

				<!-- Meshes -->
				<mesh id="msh_1"
					width="2" smooth="true"
					color="graph_mesh_cycle" color.hue="0"
					fill="true" fcolor="graph_mesh_cycle" fcolor.hue="0" fcolor.a="0.8" />

				<!-- Boundaries -->
				<marker ox="2" oy="0" v="1" color="graph_prim" visibility="false"/>
				<!-- +48 dB -->
				<marker ox="0" oy="1" v="24000" color="graph_prim" visibility="false"/>

				<!-- Axis -->
				<axis min="10" max="24000" color="graph_prim" angle="0.0" log="true" visibility="false"/>
				<axis min="-48 db" max="48 db" color="graph_prim" angle="0.5" log="true" visibility="false"/>
				<!-- -48..+48 dB -->
				<axis min="-1" max="1" visible="false" angle="0.5"/>

				<!-- Text -->
				<ui:with ox="0" oy="2" y="0" halign="1" valign="1">
				  <text x="10" text="graph.units.hz"/>
				  <text x="20" text="20"/>
				  <text x="30" text="30"/>
				  <text x="50" text="50"/>
				  <text x="100" text="100"/>
				  <text x="200" text="200"/>
				  <text x="300" text="300"/>
				  <text x="500" text="500"/>
				  <text x="1000" text="graph.values.x_k" text:value="1"/>
				  <text x="2000" text="graph.values.x_k" text:value="2"/>
				  <text x="3000" text="graph.values.x_k" text:value="3"/>
				  <text x="5000" text="graph.values.x_k" text:value="5"/>
				  <text x="10000" text="graph.values.x_k" text:value="10"/>
				  <text x="20000" text="graph.values.x_k" text:value="20"/>
				</ui:with>

				<ui:with x="10" halign="1">
					<text y="36 db" text="+36" valign="-1"/>
					<text y="24 db" text="+24" valign="-1"/>
					<text y="12 db" text="+12" valign="-1"/>
					<text y="0 db" text="0" valign="1"/>
					<text y="-12 db" text="-12" valign="1"/>
					<text y="-24 db" text="-24" valign="1"/>
					<text y="-36 db" text="-36" valign="1"/>
					<text y="1" ox="0" oy="2" text="graph.units.db" valign="-1"/>
				</ui:with>
			</graph>
		</group>
	
		<group text="labels.noise_generator.general" ipdadding="0" fill="true">
			<grid rows="3" cols="5" bg.color="bg_schema">
				<label text="labels.noise_generator.N_type"/>
				<label text="labels.noise_generator.N_mode"/>
				<label text="labels.noise_generator.N_amplitude"/>
				<label text="labels.noise_generator.N_offset"/>
				<label text="labels.noise_generator.M_inaudible"/>
				
				<combo id="nst_1" />
				<combo id="nsm_1" />
				<knob id="nsa_1" />
				<knob id="nso_1" />
				<button id="inas_1" />
				
				<void />
				<void />
				<value id="nsa_1" />
				<value id="nso_1" />
				<void />
			</grid>
		</group>
		
		<group text="labels.noise_generator.N_specs" ipdadding="0" fill="true">
			<vbox>
			
				<grid rows="2" cols="1" bg.color="bg_schema" visibility=":nst_1 ieq 1">
					<label text="labels.noise_generator.distribution" />
					<combo id="lcgd_1" />
				</grid>
				
				<grid rows="3" cols="5" bg.color="bg_schema" visibility=":nst_1 ieq 2">
					<label text="labels.noise_generator.V_type"/>
					<label text="labels.noise_generator.V_window"/>
					<label text="labels.noise_generator.V_delta" visibility=":velt_1 ieq 2"/>
					<label text="labels.noise_generator.V_crush"/>
					<label text="labels.noise_generator.V_crush_prob"/>
					
					<combo id="velt_1" />
					<knob id="velw_1" />
					<knob id="veld_1" visibility=":velt_1 ieq 2"/>
					<button id="velcs_1" />
					<knob id="velc_1" />
					
					<void />
					<value id="velw_1" />
					<value id="veld_1" visibility=":velt_1 ieq 2"/>
					<void />
					<value id="velc_1" />
				</grid>
			
			</vbox>
		</group>
		
		<group text="labels.noise_generator.color" ipdadding="0" fill="true">
			<grid rows="3" cols="4" bg.color="bg_schema">
				<label text="labels.noise_generator.color"/>
				<label text="labels.noise_generator.slope_npn" visibility=":cols_1 ieq 5"/>
				<label text="labels.noise_generator.slope_dbo" visibility=":cols_1 ieq 6"/>
				<label text="labels.noise_generator.slope_dbd" visibility=":cols_1 ieq 7"/>
				
				<combo id="cols_1" />
				<knob id="csnpn_1" visibility=":cols_1 ieq 5"/>
				<knob id="csdbo_1" visibility=":cols_1 ieq 6"/>
				<knob id="csdbd_1" visibility=":cols_1 ieq 7"/>
				
				<void />
				<value id="csnpn_1" visibility=":cols_1 ieq 5"/>
				<value id="csdbo_1" visibility=":cols_1 ieq 6"/>
				<value id="csdbd_1" visibility=":cols_1 ieq 7"/>
			</grid>
		</group>
		
	</vbox>
</plugin>
