<plugin resizable="true">
	<vbox spacing="4">
	
		<group text="labels.groups.general" ipdadding="0" fill="true">
			<grid rows="3" cols="5" bg.color="bg_schema">
				<label text="Noise Type"/>
				<label text="Noise Mode"/>
				<label text="Noise Amplitude"/>
				<label text="Noise Offset"/>
				<label text="Make Inaudible"/>
				
				<combo id="nst_1" />
				<combo id="nsm_1" />
				<knob id="nsa_1" />
				<knob id="nso_1" />
				<button id="inas_1" />
				
				<void />
				<void />
				<value id="nsa_1" />
				<value id="nso_1" />
				<void />
			</grid>
		</group>
		
		<group text="Noise Specific Controls" ipdadding="0" fill="true">
			<vbox>
			
				<grid rows="2" cols="1" bg.color="bg_schema" visibility=":nst_1 ieq 1">
					<label text="Distribution" />
					<combo id="lcgd_1" />
				</grid>
				
				<grid rows="3" cols="5" bg.color="bg_schema" visibility=":nst_1 ieq 2">
					<label text="Type"/>
					<label text="Window"/>
					<label text="Delta" visibility=":velt_1 ieq 2"/>
					<label text="Crush"/>
					<label text="Crush Probability"/>
					
					<combo id="velt_1" />
					<knob id="velw_1" />
					<knob id="veld_1" visibility=":velt_1 ieq 2"/>
					<button id="velcs_1" />
					<knob id="velc_1" />
					
					<void />
					<value id="velw_1" />
					<value id="veld_1" />
					<void />
					<value id="velc_1" />
				</grid>
			
			</vbox>
		</group>
		
		<group text="Color" ipdadding="0" fill="true">
			<grid rows="3" cols="4" bg.color="bg_schema">
				<label text="Color"/>
				<label text="Slope" visibility=":cols_1 ieq 5"/>
				<label text="Slope" visibility=":cols_1 ieq 6"/>
				<label text="Slope" visibility=":cols_1 ieq 7"/>
				
				<combo id="cols_1" />
				<knob id="csnpn_1" visibility=":cols_1 ieq 5"/>
				<knob id="csdbo_1" visibility=":cols_1 ieq 6"/>
				<knob id="csdbd_1" visibility=":cols_1 ieq 7"/>
				
				<void />
				<value id="csnpn_1" visibility=":cols_1 ieq 5"/>
				<value id="csdbo_1" visibility=":cols_1 ieq 6"/>
				<value id="csdbd_1" visibility=":cols_1 ieq 7"/>
			</grid>
		</group>
		
	</vbox>
</plugin>
