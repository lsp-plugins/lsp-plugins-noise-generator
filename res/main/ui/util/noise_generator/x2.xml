<plugin resizable="true">
	<vbox spacing="4">
	
		<hbox spacing="4">
			<group text="Channel Selector">
				<grid rows="1" cols="2" bg.color="bg_schema">
					<button id="ng_cs" value="1" ui:inject="Button_red" bg.color="channel_group_red_bg"/>
					<button id="ng_cs" value="2" ui:inject="Button_blue" bg.color="channel_group_blue_bg"/>
				</grid>
			</group>
		</hbox>
	
		<hbox spacing="4">
	
			<group text="labels.groups.general">
			
				<vbox spacing="4">
		
					<group text="General" ipdadding="0" fill="true">
						<grid rows="2" cols="5" bg.color="bg_schema">
							<label text="Noise Type"/>
							<label text="Noise Mode"/>
							<label text="Noise Amplitude"/>
							<label text="Noise Offset"/>
							<label text="Make Inaudible"/>
							
							<combo id="nst" />
							<combo id="nsm" />
							<knob id="nsa" />
							<knob id="nso" />
							<button id="inas" />
						</grid>
					</group>
					
					<group text="Noise Specific Controls" ipdadding="0" fill="true">
						<vbox>
						
							<grid rows="2" cols="1" bg.color="bg_schema" visibility=":nst ieq 1">
								<label text="Distribution" />
								<combo id="lcgd" />
							</grid>
							
							<grid rows="2" cols="5" bg.color="bg_schema" visibility=":nst ieq 2">
								<label text="Type"/>
								<label text="Window"/>
								<label text="Delta" visibility=":velt ieq 2"/>
								<label text="Crush"/>
								<label text="Crush Probability"/>
								
								<combo id="velt" />
								<knob id="velw" />
								<knob id="veld" visibility=":velt ieq 2"/>
								<button id="velcs" />
								<knob id="velc" />
							</grid>
						
						</vbox>
					</group>
					
					<group text="Color" ipdadding="0" fill="true">
						<grid rows="2" cols="4" bg.color="bg_schema">
							<label text="Color"/>
							<label text="Slope" visibility=":cols ieq 5"/>
							<label text="Slope" visibility=":cols ieq 6"/>
							<label text="Slope" visibility=":cols ieq 7"/>
							
							<combo id="cols" />
							<knob id="csnpn" visibility=":cols ieq 5"/>
							<knob id="csdbo" visibility=":cols ieq 6"/>
							<knob id="csdbd" visibility=":cols ieq 7"/>
						</grid>
					</group>
					
				</vbox>
			
			</group>
			
			<ui:for id="i" first="1" last="2">
				<ui:set id="bgcol" value="${ (:i ieq 1) ? 'channel_group_red_bg' : 'channel_group_blue_bg'}"/>
				<ui:set id="col" value="${ (:i ieq 1) ? 'red' : 'blue'}"/>
		
				<group text="Channel ${i}" visibility=":ng_cs ieq ${i}">
				
					<vbox spacing="4">
					
						<group text="Channel Controls" ipdadding="0" fill="true">
							<grid rows="2" cols="3" bg.color="${bgcol}">
								<label text="Use Global"/>
								<label text="Solo"/>
								<label text="Mute"/>
								
								<button id="glsw_${i}" />
								<button id="chsl_${i}" />
								<button id="chmt_${i}" />
							</grid>
						</group>
			
						<group text="General" ipdadding="0" fill="true">
							<grid rows="2" cols="5" bg.color="${bgcol}">
								<label text="Noise Type"/>
								<label text="Noise Mode"/>
								<label text="Noise Amplitude"/>
								<label text="Noise Offset"/>
								<label text="Make Inaudible"/>
								
								<combo id="nst_${i}" />
								<combo id="nsm_${i}" />
								<knob id="nsa_${i}" />
								<knob id="nso_${i}" />
								<button id="inas_${i}" />
								
								<void />
								<void />
								<value id="nsa_${i}" />
								<value id="nso_${i}" />
								<void />
							</grid>
						</group>
						
						<group text="Noise Specific Controls" ipdadding="0" fill="true">
							<vbox>
							
								<grid rows="2" cols="1" bg.color="${bgcol}" visibility=":nst_${i} ieq 1">
									<label text="Distribution" />
									<combo id="lcgd_${i}" />
								</grid>
								
								<grid rows="3" cols="5" bg.color="${bgcol}" visibility=":nst_${i} ieq 2">
									<label text="Type"/>
									<label text="Window"/>
									<label text="Delta" visibility=":velt_${i} ieq 2"/>
									<label text="Crush"/>
									<label text="Crush Probability"/>
									
									<combo id="velt_${i}" />
									<knob id="velw_${i}" />
									<knob id="veld_${i}" visibility=":velt_${i} ieq 2"/>
									<button id="velcs_${i}" />
									<knob id="velc_${i}" />
									
									<void />
									<value id="velw_${i}" />
									<value id="veld_${i}" />
									<void />
									<value id="velc_${i}" />
								</grid>
							
							</vbox>
						</group>
						
						<group text="Color" ipdadding="0" fill="true">
							<grid rows="2" cols="4" bg.color="${bgcol}">
								<label text="Color"/>
								<label text="Slope" visibility=":cols_${i} ieq 5"/>
								<label text="Slope" visibility=":cols_${i} ieq 6"/>
								<label text="Slope" visibility=":cols_${i} ieq 7"/>
								
								<combo id="cols_${i}" />
								<knob id="csnpn_${i}" visibility=":cols_${i} ieq 5"/>
								<knob id="csdbo_${i}" visibility=":cols_${i} ieq 6"/>
								<knob id="csdbd_${i}" visibility=":cols_${i} ieq 7"/>
							</grid>
						</group>
						
					</vbox>
				
				</group>
			
			</ui:for>
		</hbox>
	</vbox>
</plugin>